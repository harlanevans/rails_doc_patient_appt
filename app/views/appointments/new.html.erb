<h1>Add Appointment</h1>
<%= form_with(model: [@doctor, @appointment], local: true ) do |f| %>
  <%= f.label :patient %>
  <%= f.select :patient_id, @patients.collect { |u| [u.full_name, u.id] }  %>
  <br />
  <br />
  <h5>Please define a time and date for your appointment.</h5>
  <%= f.label :date %>
  <%= f.date_field :date, required: true, placeholder: "Date" %>
  <br />
  <%= f.label :time %>
  <%= f.time_field :time, required: true, placeholder: "Time" %>
  <br />
  <%= f.submit nil, class: "btn #ff6f00 amber darken-4" %>
<% end %>