<h1><i>Add Doctor</i><i class="user md icon"></i></h1>
<%= form_with(model: @doctor, local: true, class: "ui form") do |f| %>
  <div class="field" >
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Doctor Name" %>
  </div>
  <%= f.submit nil, class: "ui inverted red button" %>
  <% end %>